<%= form_for @reservation, url: reservations_path, method: :post, :html => { :multipart => true } do |f| %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group">
    <%= f.date_select('check_in', :check_in => Time.now ) %>
  </div>
  <div class='form-group'>
    <%= f.date_select('check_out', default: 1.days.from_now ) %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>

